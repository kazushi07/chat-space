.MessageBox{data: {message: {id: message.id}}}
  .Chat-main__message-list__speaker
    = message.user.name
  .Chat-main__message-list__time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Chat-main__message-list__text
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
